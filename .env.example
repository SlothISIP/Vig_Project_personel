# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=digital_twin
DATABASE_URL=postgresql://admin:your_secure_password_here@localhost:5432/digital_twin

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_URL=amqp://admin:your_rabbitmq_password_here@localhost:5672

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET_NAME=digital-twin
MINIO_USE_SSL=false

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=defect-detection

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your_secret_key_here_change_in_production
API_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Model Configuration
DEFAULT_MODEL_NAME=swin_tiny
DEFAULT_MODEL_PATH=models/onnx/swin_defect_optimized.onnx
MODEL_DEVICE=cuda  # or cpu
MODEL_BATCH_SIZE=32
MODEL_IMAGE_SIZE=224

# Vision AI Configuration
VISION_CONFIDENCE_THRESHOLD=0.7
VISION_MAX_BATCH_SIZE=64
VISION_ENABLE_ATTENTION_MAPS=true

# Digital Twin Configuration
DT_UPDATE_FREQUENCY=1.0  # Hz
DT_SIMULATION_STEP=0.1  # seconds
DT_ENABLE_PREDICTION=true

# Scheduling Configuration
SCHEDULING_ALGORITHM=ortools  # ortools, genetic, simulated_annealing
SCHEDULING_TIME_LIMIT=60  # seconds
SCHEDULING_OPTIMIZATION_LEVEL=2  # 0-3

# Celery Configuration
CELERY_BROKER_URL=amqp://admin:your_rabbitmq_password_here@localhost:5672
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Seoul
CELERY_ENABLE_UTC=true

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_ENABLE_DEV_TOOLS=true

# Data Configuration
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODELS_DIR=models

# DVC Configuration
DVC_REMOTE=storage
DVC_REMOTE_URL=s3://your-bucket/dvc-cache
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=ap-northeast-2

# IoT Simulation Configuration
IOT_ENABLED=true
IOT_CAMERA_FPS=30
IOT_SENSOR_FREQUENCY=10  # Hz
IOT_NUM_MACHINES=5

# Email Alerts (Optional)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_RECIPIENTS=admin@example.com,engineer@example.com

# Slack Notifications (Optional)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Feature Flags
ENABLE_AUTHENTICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_WEBSOCKETS=true
ENABLE_METRICS=true

# Development Settings
DEBUG=false
TESTING=false
ENVIRONMENT=development  # development, staging, production

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
SECURE_COOKIES=false  # Set to true in production with HTTPS
CSRF_ENABLED=true

# Performance Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
REQUEST_TIMEOUT=30  # seconds
WORKER_TIMEOUT=300  # seconds

# Experiment Tracking
WANDB_ENABLED=false
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=digital-twin-factory
WANDB_ENTITY=your_wandb_username
